@model CVOIS.Models.SuperAdmin.SuperAdminViewModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    // var username = Context.Session.GetString("Username");
}

@* org level modal open button *@
<div class="d-flex justify-content-between align-items-center mb-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#levelModal">
        <i class="fa fa-plus"></i> Add Org Level
    </button>
    <h3>Org Level List</h3>
    <div class="d-flex align-items-center gap-2 ms-auto">
    </div>
</div>

@* Org Level Modal  *@
<div class="modal fade" id="levelModal" tabindex="-1" role="dialog" aria-labelledby="levelLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="levelForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="levelModalLabel">Add New Level</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-row row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Org_Level.Code" class="control-label"></label>
                                <input asp-for="Org_Level.Code" class="form-control" id="Level_Code" placeholder="Organization Level Code" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Org_Level.org_level" class="control-label"></label>
                                <input asp-for="Org_Level.org_level" class="form-control" id="Level_org_level" placeholder="Organization Level Name" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSaveLevel" onclick="SaveLevel()">
                        Submit
                    </button>
                    @* <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> *@
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="resetModalForm()">
                        Close
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Org Level table *@
@if (Model.Org_Level_List != null && Model.Org_Level_List.Any())
{
    <div class="table-responsive table-wrapper">
        <table id="orgLevelDataTable" class="table table-bordered table-striped custom-border w-100">
            <thead class="table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Org_Level.row_num)</th>
                    <th>@Html.DisplayNameFor(model => model.Org_Level.Code)</th>
                    <th>@Html.DisplayNameFor(model => model.Org_Level.org_level)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Org_Level_List)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.row_num)</td>
                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.org_level)</td>
                        <td class="text-center">
                            <a asp-action="EditLevel" asp-route-id="@item.sno" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="javascript:void(0);"
                               class="btn btn-sm btn-outline-danger"
                               onclick="confirmDelete('@Url.Action("DeleteLevel", new { id = item.sno })')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger">No Level records found.</div>
}


