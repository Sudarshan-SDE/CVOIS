@model CVOIS.Models.SuperAdmin.SuperAdminViewModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

@* Master CVO Services Modal *@
<div class="modal fade" id="mastercvoservicesModal" tabindex="-1" role="dialog" aria-labelledby="mastercvoservicesLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="mastercvoservicesForm">
                <div class="modal-header">
                    <h5 class="modal-title">Add Master CVO Services</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-row row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MasterCVOServices.serviceCode" class="control-label"></label>
                                <input asp-for="MasterCVOServices.serviceCode" class="form-control" id="serviceCode" placeholder="Master Service Code" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MasterCVOServices.serviceDesc" class="control-label"></label>
                                <input asp-for="MasterCVOServices.serviceDesc" class="form-control" id="serviceDesc" placeholder="Master Service Name" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSaveMasterCVOServices" onclick="SaveMasterCVOServices()">
                        Submit
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="resetModalForm()">
                        Close
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Master CVO Services table *@
@Html.Partial("_MasterCvoServicesTable.cshtml")


@* ----------Script start from here---------*@

@* Save Master CVO Service Data *@
<script>
    function SaveMasterCVOServices() {
        let serviceCode = $("#serviceCode").val().trim();
        let serviceDesc = $("#serviceDesc").val().trim();

        // Collect validation errors
        let errorMessage = "";

        if (!serviceCode && !serviceDesc) {
            errorMessage = "All fields are required.";
        }
        else if (!serviceCode) {
            errorMessage = "Please Enter the Service Code.";
        }
        else if (!serviceDesc) {
            errorMessage = "Please Enter the Service Name.";
        }
        if (errorMessage) {
            Swal.fire({
                icon: 'warning',
                title: errorMessage,
                confirmButtonColor: '#d33'
            });
            return;
        }

        Swal.fire({
            title: "Do you want to save the record?",
            icon: "question",
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: "Save",
            denyButtonText: `Don't save`
        }).then((result) => {
            if (result.isConfirmed) {

                $('#btnSaveMasterCVOServices').prop('disabled', true).text("Submitting...");

                $.ajax({
                    type: 'POST',
                    url: '/SuperAdmin/MasterCvoServices',
                    data: {
                        'MasterCVOServices.serviceCode': serviceCode,
                        'MasterCVOServices.serviceDesc': serviceDesc
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Master CVO Services added successfully.',
                                confirmButtonColor: '#3085d6'
                            }).then(() => {
                                $('#mastercvoservicesLabel').modal('hide');
                                $('#mastercvoservicesForm')[0].reset();
                                location.reload();
                            });
                        }
                        else if (response.duplicate_Master_Services_message) {
                            Swal.fire({
                                icon: 'warning',
                                title: response.duplicate_Master_Services_message,
                                confirmButtonColor: '#f0ad4e'
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: response.error_Master_Services_message,
                                confirmButtonColor: '#d33'
                            });
                        }
                    },
                    error: function (response) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops!',
                            text: 'Something went wrong. Please try again.',
                            confirmButtonColor: '#d33'
                        });
                    },
                    complete: function () {
                        $('#btnSaveMasterCVOServices').prop('disabled', false).text("Submit");
                    }
                });
            } 
        });

    }
</script>

@* Delete Master CVO Service Data Confirmation*@
<script>
    function confirmDelete(deleteUrl) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = deleteUrl;
            }
        });
    }
</script>

@* Delete Master CVO Service Data  *@
<script>
    $(document).ready(function () {
        var MasterCVOServicessuccessMessage = '@TempData["Delete_MasterCvoServices_Message"]';
        var MasterCVOServiceserrorMessage = '@TempData["Failed_MasterCvoServices_Message"]';

        if (MasterCVOServicessuccessMessage) {
            Swal.fire({
                title: "Deleted!",
                text: MasterCVOServicessuccessMessage,
                icon: "success",
                confirmButtonText: "OK"
            });
        }

        if (MasterCVOServiceserrorMessage) {
            Swal.fire({
                title: "Error!",
                text: MasterCVOServiceserrorMessage,
                icon: "error",
                confirmButtonText: "OK"
            });
        }
    });
</script>

@* Reset Form *@
<script>
    function resetModalForm() {
        document.getElementById("mastercvoservicesForm").reset();
    }
</script>