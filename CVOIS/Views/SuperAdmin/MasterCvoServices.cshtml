@model CVOIS.Models.SuperAdmin.SuperAdminViewModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    // var username = Context.Session.GetString("Username");
}

@* Master CVO Services modal open button *@
<div class="d-flex justify-content-between align-items-center mb-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mastercvoservicesModal">
        <i class="fa fa-plus"></i> Add Master Services
    </button>
    <h3>Master CVO Services List</h3>
    <div class="d-flex align-items-center gap-2 ms-auto">
    </div>
</div>


@* Master CVO Services Modal *@
<div class="modal fade" id="mastercvoservicesModal" tabindex="-1" role="dialog" aria-labelledby="mastercvoservicesLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="mastercvoservicesForm">
                <div class="modal-header">
                    <h5 class="modal-title">Add Master CVO Services</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-row row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MasterCVOServices.serviceCode" class="control-label"></label>
                                <input asp-for="MasterCVOServices.serviceCode" class="form-control" id="serviceCode" placeholder="Master Service Code" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MasterCVOServices.serviceDesc" class="control-label"></label>
                                <input asp-for="MasterCVOServices.serviceDesc" class="form-control" id="serviceDesc" placeholder="Master Service Name" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSaveMasterCVOServices" onclick="SaveMasterCVOServices()">
                        Submit
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="resetModalForm()">
                        Close
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Master CVO Services table *@
@if (Model.MasterCVOServices_List != null && Model.MasterCVOServices_List.Any())
{
    <div class="table-responsive table-wrapper">
        <table id="masterCVOServicesDataTable" class="table table-bordered table-striped custom-border w-100">
            <thead class="table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MasterCVOServices.row_num)</th>
                    <th>@Html.DisplayNameFor(model => model.MasterCVOServices.serviceCode)</th>
                    <th>@Html.DisplayNameFor(model => model.MasterCVOServices.serviceDesc)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MasterCVOServices_List)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.row_num)</td>
                        <td>@Html.DisplayFor(modelItem => item.serviceCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.serviceDesc)</td>
                        <td class="text-center">
                            <a asp-action="EditMasterCVOServices" asp-route-id="@item.sno" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="javascript:void(0);"
                               class="btn btn-sm btn-outline-danger"
                               onclick="confirmDelete('@Url.Action("DeleteMasterCVOServices", new { id = item.sno })')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger">No Master CVO Services records found.</div>
}


