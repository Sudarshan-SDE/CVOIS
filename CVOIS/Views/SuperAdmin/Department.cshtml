@model CVOIS.Models.SuperAdmin.SuperAdminViewModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    // var username = Context.Session.GetString("Username");
}


@* department modal open button *@
<div class="d-flex justify-content-between align-items-center mb-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#departmentModal">
        <i class="fa fa-plus"></i> Add Department
    </button>
    <h3>Department List</h3>
    <div class="d-flex align-items-center gap-2 ms-auto">
    </div>
</div>

@* Department Modal  *@
<div class="modal fade" id="departmentModal" tabindex="-1" role="dialog" aria-labelledby="departmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="departmentForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="departmentModalLabel">Add New Department</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-row row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Department.Mincode" class="control-label"></label>
                                <select asp-for="Department.Mincode" class="form-control" id="Department_Mincode">
                                    <option value="">-- Select Ministry --</option>
                                    @foreach (var minobj in Model.Ministry_ddl_List)
                                    {
                                        <option value="@minobj.Value">@minobj.Text</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Department.DeptName" class="control-label"></label>
                                <input asp-for="Department.DeptName" class="form-control" id="Department_DeptName" placeholder="Department Name" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Department.Dept_status" class="control-label"></label>
                                <select asp-for="Department.Dept_status" class="form-control" id="Department_Dept_status">
                                    <option value="">-- Select Status --</option>
                                    <option value="ACTIVE">ACTIVE</option>
                                    <option value="INACTIVE">INACTIVE</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSaveDepartment" onclick="SaveDepartment()">Submit</button>
                    @*  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> *@
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="resetModalForm()">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Department Table *@
@if (Model.Department_List != null && Model.Department_List.Any())
{
    <div class="table-wrapper table-responsive">
        <table id="departmentDataTable" class="table table-bordered table-striped w-100">
            <thead class="table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Department.row_num)</th>
                    <th>@Html.DisplayNameFor(model => model.Department.Ministry_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Department.DeptName)</th>
                    <th>@Html.DisplayNameFor(model => model.Department.Dept_status)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Department_List)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.row_num)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ministry_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeptName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dept_status)</td>
                        <td class="text-center">
                            <a asp-action="EditDepartment" asp-route-id="@item.Dept_Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="javascript:void(0);"
                               class="btn btn-sm btn-outline-danger"
                               onclick="confirmDelete('@Url.Action("DeleteDepartment", new { id = item.Dept_Id})')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No departments found.</div>
}


