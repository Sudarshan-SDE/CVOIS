<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>

    <meta name="author" content="Central Vigilance Commission (CVC)">
    <meta name="MobileOptimized" content="width">
    <meta name="HandheldFriendly" content="true">
    <meta name="copyright" content="Copyright 2024">
    <link rel="icon" type="image/x-icon" href="~/images/Logo/svg_c.png">
    <meta name="twitter:title" content="@ViewBag.title" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/ltscript/plugins/fontawesome-free/css/all.min.css" />

    <!-- DataTables -->
    <link rel="stylesheet" href="~/ltscript/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/ltscript/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/ltscript/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <!-- AdminLTE + Custom Styles -->
    <link rel="stylesheet" href="~/ltscript/dist/css/adminlte.min.css" />
    <link href="~/css/stylesheet.css" rel="stylesheet" />

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Admin/AdminDashboard" class="nav-link">Admin Dashboard</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Viewer/ViewerDashboard" class="nav-link">Viewer Dashboard</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/ltscript/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="" style="cursor: default;" class="d-block">Admin</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item menu-close">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>Add/Update Records<i class="right fas fa-angle-left"></i></p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="~/Admin/Get_FullTimeCVOForManage" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>Add Full Time CVO</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>Update Full Time CVO</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>Active/Inactive Full Time CVO</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item menu-close">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-edit"></i><p>Report<i class="right fas fa-angle-left"></i></p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="~/Admin/Ministries" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>View Ministries</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Admin/Departments" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>View Departments</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Admin/Organizations" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>View Organisations</p>
                                    </a>
                                </li>
                                  <li class="nav-item">
                                    <a href="~/Admin/FullTimeCVO" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>View FullTimeCVO</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Admin/VacantFullTimeCVO" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i><p>View VacantFullTimeCVO</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <!-- Left side: Welcome message and breadcrumb -->
                        <div class="d-flex align-items-center flex-wrap">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="~/SuperAdmin/SuperAdminDashboard">Home</a>
                                </li>
                                <li class="breadcrumb-item active">@ViewBag.title</li>
                            </ol>
                        </div>

                        <!-- Right side: Action buttons -->
                        <div class="d-flex align-items-center mt-2 mt-sm-0">
                            <h5 class="mb-0 me-3">Welcome, Admin! Sudarshan</h5>
                            <a asp-action="Logout" asp-controller="Home" class="btn btn-sm btn-outline-danger me-2 btn-spacing">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                            <a asp-action="ResetPassword" asp-controller="Home" class="btn btn-sm btn-outline-primary btn-spacing">
                                <i class="fas fa-edit"></i> Reset Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
           
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>

       
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2023-2025 <a href="https://cvois.cvc.gov.in">CVC-CVOIS</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="~/ltscript/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->
    <script src="~/ltscript/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables & Plugins -->
    <script src="~/ltscript/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/ltscript/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/ltscript/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/ltscript/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/ltscript/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/ltscript/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/ltscript/plugins/jszip/jszip.min.js"></script>
    <script src="~/ltscript/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/ltscript/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/ltscript/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/ltscript/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/ltscript/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <!-- AdminLTE -->
    <script src="~/ltscript/dist/js/adminlte.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>

</body>
</html>
